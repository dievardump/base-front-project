{
  "name": "base-front",
  "version": "0.0.1",
  "description": "Base of my front projects",
  "scripts": {
    "dev": "cross-env-shell NODE_ENV=development npm-run-all --parallel server assets:watch",
    "server": "node server.js",
    "build": "cross-env-shell NODE_ENV=production npm run assets:build html:build",
    "assets:watch": "npm-run-all --parallel js:watch css:watch",
    "assets:build": "npm-run-all js:build css:build",
    "js:watch": "cross-env-shell ./node_modules/.bin/rollup -c -w",
    "js:build": "cross-env-shell ./node_modules/.bin/rollup -c",
    "css:build": "cross-env-shell ./node_modules/.bin/postcss $npm_package_config_css_in --no-map --dir $npm_package_config_prod_css_out",
    "css:watch": "cross-env-shell ./node_modules/.bin/postcss $npm_package_config_css_in --no-map --dir $npm_package_config_dev_css_out --watch",
    "html:build": "node build.js"
  },
  "config": {
    "dev": {
      "css_out": "dist/css/",
      "js_out": "dist/js/"
    },
    "prod": {
      "css_out": "dist/css/",
      "js_out": "dist/js/",
      "html_out": "dist/index.html"
    },
    "css_in": "src/css/*.css",
    "js_in": "src/js/",
    "html_in": "views/index.html"
  },
  "author": "simon.fremaux",
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-export-default-from": "^7.10.4",
    "@babel/plugin-proposal-export-namespace-from": "^7.10.4",
    "@babel/polyfill": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-replace": "^2.3.3",
    "axios": "^0.21.1",
    "babel-plugin-macros": "^2.8.0",
    "classnames": "^2.2.6",
    "core-js": "^3.6.5",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "cssrecipes-defaults": "^0.5.0",
    "dynamic-import-polyfill": "^0.1.1",
    "express": "^4.17.1",
    "fs-extra": "^9.0.1",
    "globby": "^11.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "postcss-conditionals": "^2.1.0",
    "postcss-each": "^0.10.0",
    "postcss-easings": "^2.0.0",
    "postcss-extend": "^1.0.5",
    "postcss-for": "^2.1.1",
    "postcss-import": "^12.0.1",
    "postcss-mixins": "^6.2.3",
    "postcss-nested": "^4.2.3",
    "postcss-preset-env": "^6.7.0",
    "regenerator-runtime": "^0.13.7",
    "rollup": "^2.26.3",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.0",
    "twing": "^5.0.2"
  }
}
